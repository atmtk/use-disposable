{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
